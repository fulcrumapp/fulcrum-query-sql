{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src/",
    "strict": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "target": "ES6",
    "inlineSources": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
  ]
}